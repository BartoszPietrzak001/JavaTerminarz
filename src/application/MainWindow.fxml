<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.Light.Distant?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="800" prefWidth="600" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <Button fx:id="setEvent" layoutX="242.0" layoutY="467.0" mnemonicParsing="false" onAction="#addEvent" text="Set Event">
         <effect>
            <Bloom>
               <input>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </input>
            </Bloom>
         </effect></Button>
      <TextField fx:id="eventDescription" layoutX="36.0" layoutY="345.0" prefHeight="40.0" prefWidth="528.0" promptText="Description" />
      <Label alignment="CENTER" layoutX="141.0" layoutY="246.0" prefHeight="31.0" prefWidth="18.0" text=":" textFill="WHITE" />
      <ListView fx:id="eventListView" layoutX="54.0" layoutY="523.0" prefHeight="250.0" prefWidth="491.0" />
      <DatePicker fx:id="calendar" editable="false" layoutX="46.0" layoutY="81.0" prefHeight="189.0" prefWidth="528.0" promptText="Choose date" />
      <TextField fx:id="eventVenue" layoutX="35.0" layoutY="411.0" prefHeight="40.0" prefWidth="528.0" promptText="Venue" />
      <TextField fx:id="errorTextField" editable="false" layoutX="91.0" layoutY="41.0" prefHeight="31.0" prefWidth="416.0" />
      <MenuBar layoutY="-2.0" prefHeight="32.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Calendar">
            <items>
                  <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Import" />
                  <MenuItem fx:id="serializeButton" mnemonicParsing="false" onAction="#serializeEvents" text="Export" />
              <MenuItem fx:id="closeButton" mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem mnemonicParsing="false" text="Edit Event" />
                  <MenuItem mnemonicParsing="false" text="Copy Event" />
              <MenuItem mnemonicParsing="false" text="Delete Event" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Options">
              <items>
                <MenuItem mnemonicParsing="false" text="Settings..." />
                  <MenuItem fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" text="LogOut" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutButton" mnemonicParsing="false" onAction="#onAboutClick" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ComboBox fx:id="hourBox" layoutX="66.0" layoutY="289.0" prefHeight="31.0" prefWidth="193.0" promptText="HH" />
      <ComboBox fx:id="minuteBox" layoutX="324.0" layoutY="289.0" prefHeight="31.0" prefWidth="193.0" promptText="MM" />
   </children>
</AnchorPane>
