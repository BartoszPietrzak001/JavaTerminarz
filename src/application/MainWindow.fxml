<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.Light.Distant?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="800" prefWidth="600" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <Button fx:id="setEvent" layoutX="252.0" layoutY="434.0" mnemonicParsing="false" onAction="#addEvent" text="Set Event">
         <effect>
            <Bloom>
               <input>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </input>
            </Bloom>
         </effect></Button>
      <Button fx:id="logOutButton" layoutX="485.0" layoutY="14.0" mnemonicParsing="false" onAction="#logOut" text="LogOut" />
      <ComboBox fx:id="dayBox" layoutX="50.0" layoutY="85.0" onAction="#setDay" prefHeight="31.0" prefWidth="197.0" promptText="Day" />
      <ComboBox fx:id="monthBox" layoutX="50.0" layoutY="138.0" onAction="#setMonth" prefHeight="31.0" prefWidth="197.0" promptText="Month" />
      <ComboBox fx:id="yearBox" layoutX="51.0" layoutY="189.0" onAction="#setYear" prefHeight="31.0" prefWidth="197.0" promptText="Year" />
      <ComboBox fx:id="hourBox" layoutX="50.0" layoutY="242.0" onAction="#setHour" prefHeight="31.0" prefWidth="86.0" promptText="HH" />
      <ComboBox fx:id="minuteBox" layoutX="162.0" layoutY="242.0" onAction="#setMinute" prefHeight="31.0" prefWidth="86.0" promptText="MM" />
      <TextField fx:id="eventDescription" layoutX="30.0" layoutY="303.0" prefHeight="40.0" prefWidth="528.0" promptText="Description" />
      <Label alignment="CENTER" layoutX="141.0" layoutY="246.0" prefHeight="31.0" prefWidth="18.0" text=":" textFill="WHITE" />
      <ListView fx:id="eventListView" layoutX="64.0" layoutY="507.0" prefHeight="250.0" prefWidth="491.0" />
      <DatePicker fx:id="calendar" layoutX="300.0" layoutY="85.0" prefHeight="189.0" prefWidth="260.0" />
      <TextField fx:id="eventVenue" layoutX="29.0" layoutY="369.0" prefHeight="40.0" prefWidth="528.0" promptText="Venue" />
      <TextField fx:id="errorTextField" layoutX="43.0" layoutY="30.0" prefHeight="31.0" prefWidth="416.0" />
   </children>
</AnchorPane>
